datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator kysely {
  provider = "prisma-kysely"
  output   = "../kysely"
  fileName = "db-types.ts"
}

model Users {
  id       Int       @id @default(autoincrement())
  userId   String    @unique
  email    String    @unique
  password String

  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  Sessions           Sessions[]

  @@map("users")
}

model Sessions {
  id         String   @unique
  user_id    String
  expires_at DateTime

  user Users @relation(fields: [user_id], references: [userId])

  @@map("sessions")
}