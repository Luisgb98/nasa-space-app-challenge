datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

generator client {
    provider = "prisma-client-js"
}

generator kysely {
    provider = "prisma-kysely"
    output   = "../kysely"
    fileName = "db-types.ts"
}

model Users {
    id       String @unique
    email    String @unique
    password String

    createdAt     DateTime       @default(now())
    updatedAt     DateTime       @updatedAt
    Sessions      Sessions[]
    WidgetConfigs WidgetConfigs?

    @@map("users")
}

model Sessions {
    id         String   @unique
    user_id    String
    expires_at DateTime

    user Users @relation(fields: [user_id], references: [id])

    @@map("sessions")
}

model Planets {
    id                    Int     @id @default(autoincrement())
    name                  String  @unique
    actualRadius          Float
    scaledRadius          Float
    actualDistanceFromSun Float
    scaledDistance        Float
    circumference         Float
    rotationPeriod        Float
    rotationSpeed         Float
    translationSpeed      Float
    mayorAxis             Float
    eccentricity          Float
    texture               String
    dwarf                 Boolean

    Satellites Satellites[]

    @@map("planets")
}

model Satellites {
    id                       Int    @id @default(autoincrement())
    name                     String @unique
    actualRadius             Float
    scaledRadius             Float
    actualDistanceFromPlanet Float
    scaledDistance           Float
    circumference            Float
    rotationPeriod           Float
    rotationSpeed            Float
    translationSpeed         Float
    texture                  String
    planet_name              String

    planets Planets @relation(fields: [planet_name], references: [name])

    @@map("satellites")
}

model Stars {
    id             Int    @id @default(autoincrement())
    name           String @unique
    actualRadius   Float
    scaledRadius   Float
    actualDistance Float?
    scaledDistance Float?
    circumference  Float
    rotationPeriod Float
    rotationSpeed  Float
    texture        String

    @@map("stars")
}

model WidgetConfigs {
    id         Int     @id @default(autoincrement())
    user_id    String  @unique
    velocity   Float
    orbits     Boolean
    planets    Boolean
    satellites Boolean
    dwarfs     Boolean

    user Users @relation(fields: [user_id], references: [id])

    @@map("widget-configs")
}
